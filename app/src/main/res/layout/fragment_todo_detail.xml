<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.epicodus.githubtodos.ui.TodoDetailFragment"
             android:background="@color/colorPrimaryDark"
                android:padding="26dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/statsLinearLayout"
        android:weightSum="7">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_feature"
            android:id="@+id/todoTypeIcon"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/urgencyTextView"
            android:textSize="20sp"
            android:text="urgency"
            android:gravity="center"
            android:visibility="gone"
            android:layout_weight="3"
            android:textColor="@color/colorIcons"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/difficultyTextView"
            android:textSize="20sp"
            android:gravity="center"
            android:text="difficulty"
            android:visibility="gone"
            android:layout_weight="3"
            android:textColor="@color/colorIcons"/>
    </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Todo Title"
            android:layout_below="@id/statsLinearLayout"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_margin="10dp"
            android:textSize="25sp"
            android:id="@+id/todoTitleTextView"
            android:textColor="@color/colorDivider"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="date"
            android:visibility="gone"
            android:id="@+id/createdTextView"
            android:layout_below="@+id/todoTitleTextView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryLight"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="website"
            android:id="@+id/websiteTextView"
            android:layout_below="@+id/createdTextView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryLight"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="body"
            android:visibility="gone"
            android:id="@+id/bodyTextView"
            android:layout_below="@+id/websiteTextView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="16sp"
            android:textColor="@color/colorIcons"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/notesTitleTextView"
            android:text="Notes:"
            android:layout_below="@+id/bodyTextView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="18sp"
            android:visibility="gone"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorIcons"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/notesTextView"
            android:text="no notes yet!"
            android:visibility="gone"
            android:layout_below="@+id/notesTitleTextView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="16sp"
            android:textColor="@color/colorIcons"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:id="@+id/addNoteLinearLayout"
            android:gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:visibility="gone"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="9dp"
                android:layout_weight="1"
                android:id="@+id/addNoteEditText"
                android:hint="@string/add_note_hint"
                android:textColorHint="@color/colorSecondaryText"
                android:background="@color/colorPrimaryLight"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:id="@+id/addNoteButton"
                android:text="@string/plus_sign"
                android:textSize="24sp"/>
        </LinearLayout>
</RelativeLayout>
