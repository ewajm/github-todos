<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity"
    android:background="@color/colorPrimaryLight">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/imageView"
        android:src="@drawable/bgdark"
        android:scaleType="centerCrop"
        android:contentDescription="@string/bg_content_description"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_subheading"
        android:id="@+id/subHeadingView"
        android:gravity="center_horizontal"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="22dp"
        android:textColor="@color/colorPrimaryLight"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"/>
    <TextView
        android:text="@string/main_heading_aside"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/subHeadingView"
        android:layout_centerHorizontal="true"
        android:id="@+id/asideTextView"
        android:textStyle="normal|bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enter_username_text"
        android:id="@+id/beginTextView"
        android:textSize="22sp"
        android:textColor="@color/colorPrimaryLight"
        android:textStyle="normal|bold"
        android:layout_below="@+id/subHeadingView"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_marginTop="50dp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/beginTextView"
        android:layout_marginTop="24dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/usernameInput"
                android:inputType="text"
                android:hint="@string/username"
                android:textColorHint="@color/colorDivider"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryLight"

                android:layout_margin="10dp"
                android:layout_weight="1"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/todos_lookup"
                android:id="@+id/lookupButton"
                android:layout_margin="10dp"
                android:layout_weight="1"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/usernameLoginInput"
                android:inputType="text"
                android:hint="@string/your_username"
                android:textColorHint="@color/colorDivider"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryLight"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/passwordInput"
                android:inputType="textPassword"
                android:hint="@string/your_password"
                android:textColorHint="@color/colorDivider"
                android:textAlignment="center"
                android:layout_margin="10dp"
                android:textColor="@color/colorPrimaryLight"
                android:layout_weight="1"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/todos_login"
                android:id="@+id/loginButton"
                android:layout_weight="1"
                android:layout_margin="10dp"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
