<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.epicodus.githubtodos">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.MainActivity"></activity>
        <activity android:name=".ui.ReposActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.MainActivity"></meta-data>
        </activity>
        <activity android:name=".ui.TodosActivity"></activity>
        <activity android:name=".ui.TodoDetailActivity"></activity>
        <activity
            android:name=".ui.CreateAccountActivity"
            android:theme="@style/_AppThemeNoActionBar"></activity>
        <activity
            android:name=".ui.LoginActivity"
            android:theme="@style/_AppThemeNoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.BaseActivity"></activity>
        <activity android:name=".ui.AboutActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.MainActivity"></meta-data>
        </activity>
        <activity android:name=".ui.AddTodoActivity"></activity>
        <activity android:name=".ui.SavedReposActivity"></activity>
    </application>

</manifest>